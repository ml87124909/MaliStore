page {
  background-color: #ffffff;
}
.order-content-box swiper-item {
  overflow-y: scroll;
}
.order-header-box {
  height: 90rpx;
  background-color: #fff;
  position: fixed;
  z-index: 9;
}
.ui-tabs {
  height: 90rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.order-content-box {
  padding-top: 90rpx;
}
.order-content-box swiper {
  background-color: #f5f5f5;
}
.order-list {
  color: #27323f;
  background-color: #ffffff;
  border-bottom: 20rpx solid #f5f5f5;
}
.order-list .order-ui-row {
  border-bottom: 2rpx solid #f5f5f5;
}
.order-list .order-ui-row .order-goods-name {
  width: 95%;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-list .order-ui-row .order-goods-info {
  width: 95%;
  padding-top: 12rpx;
  color: #7b8196;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-list .order-button-time {
  display: flex;
  height: 60rpx;
  background-color: #ffd305;
  color: #27323f;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 4rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  min-width: 160rpx;
}
.order-list .order-button-time text {
  width: 60rpx;
  padding-right: 6rpx;
}
.order-list .order-button {
  border: 2rpx solid #e2e2e2;
  margin-right: 26rpx;
  color: #27323f;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
}
.order-list .order-cancel {
  color: #7b8196;
}
.order-one-img {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.order-one-img image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 4rpx;
}
.order-two-box {
  width: 100%;
  white-space: nowrap;
  overflow: scroll;
  margin-top: 6rpx;
}
.order-two-box .order-two-img {
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
  margin-left: 40rpx;
  margin-right: -10rpx;
}
.no-more-goods {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-more-goods .no-order-img {
  width: 200rpx;
  height: 200rpx;
}
.no-more-goods .text {
  font-size: 26rpx;
  color: #bfbfbf;
}
.mask_wrap .photo {
  padding: 0;
  position: absolute;
  left: 0;
  right: 0;
  top: 45%;
  transform: translateY(-50%);
  margin: 0 auto;
}
.mask_wrap .photo image {
  display: block;
  width: 100%;
}
.mask_wrap .photo .ui-icon {
  display: block;
  text-align: center;
  font-size: 96rpx;
  color: #fff;
}
.mask_wrap .photo .icon_top {
  text-align: right;
}
.mask_wrap .photo .top_view {
  position: relative;
}
.mask_wrap .photo .top_view .top_line {
  position: absolute;
  bottom: 0px;
  right: 24px;
  width: 2px;
  height: 15px;
  background-color: #fff;
}
.order-qrcode-box {
  width: 520rpx;
  height: 600rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order-qrcode-box .qrcode-title {
  font-size: 32rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #27323f;
}
.order-qrcode-box .canvas {
  width: 300rpx;
  height: 300rpx;
  margin-top: 10rpx;
  transition: opacity 0.25s ease-in;
}
.order-qrcode-box .qrcode-state {
  color: #7b8196;
  font-size: 26rpx;
  display: flex;
  height: 150rpx;
  align-items: center;
  justify-content: center;
}
.order-qrcode-box .qrcode-state .a {
  color: #6ca423;
}
.order-qrcode-box .qrcode-state .b {
  color: #d75a4c;
}
