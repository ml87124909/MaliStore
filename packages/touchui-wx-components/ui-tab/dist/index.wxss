ui-tab {
  display: inline-block;
  position: relative;
  align-items: center;
  justify-content: center;
}
.ui-tab {
  display: inline-block;
  padding: 12px 16px;
  position: relative;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.ui-tab.ui-tab-x.active {
  color: #ffd305;
  border-bottom: 1px solid #ffd305;
}
.ui-tab.border-none {
  border: 0 !important;
}
